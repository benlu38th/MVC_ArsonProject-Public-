@model IEnumerable<MVC_ArsonProject.Models.News>

@{
    ViewBag.Title = "Index";
}

<h2>最新消息管理</h2>


<a href="@Url.Action("Create")" class="btn app-btn-primary mb-2">新增消息</a>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CoverUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InitDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <img src="@item.CoverUrl" style="width:200px"></img>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InitDate)
            </td>
            <td>
                @Html.ActionLink("編輯", "Edit", new { id = item.Id }) |
                @Html.ActionLink("細節", "Details", new { id = item.Id }) |
                @Html.ActionLink("刪除", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
