@model MVC_ArsonProject.Models.CertifiedMember

@{
    ViewBag.Title = "Create";
}

<h2>配證會員管理</h2>

@using (Html.BeginForm("Create", "CertifiedMembers", FormMethod.Post, new { enctype = "multipart/form-data" }))
