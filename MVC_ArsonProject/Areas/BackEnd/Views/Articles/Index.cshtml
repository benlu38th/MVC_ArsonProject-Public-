@model IEnumerable<MVC_ArsonProject.Models.Article>

@{
    ViewBag.Title = "Index";
}

<h2>文章系統</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("編輯", "Edit", new { id=item.Id }) |
            @Html.ActionLink("細節", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
